/* pages/schedule/schedule.wxss */
.horizPlaceholder {
    width: 100%;
    height: 100%;
    /* border: 1rpx solid blue; */
    flex-shrink: 1;
}
  
  
.cityListView {
    display: flex;
    width: 100%;
    flex-direction: column;
    justify-content: space-between;
    align-items: stretch;
    /* border-top: 1rpx solid e5e5e5; */
}
  
.cityListView .item {
    display: flex;
    width: 100%;
    /* height: 160rpx; */
    flex-direction: row;
    align-items: center;
    /* justify-content: space-between; */
    /* padding: 20rpx; */
    border-bottom: 1rpx solid #e5e5e5;
  }
  
.cityListView .item .cityName {
    padding-left: 30rpx;
    color: black;
    flex-shrink: 0;
    max-width: 50%;
}
  
.cityListView .item .datetimeView {
    height: 100%;
    max-width: 50%;
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
    align-items: flex-end;
    justify-content: space-between;
    padding: 0px 30rpx;
    /* border: 1rpx solid #e5e5e5; */
}

.cityListView .item .dateView {
    font-size: 120%;
    padding-top: 10rpx;
}

.cityListView .item .timeView {
    
    font-size: 120%;
    padding-bottom: 10rpx;
}

.unselected {
  color: #df3a32;
}

.selected {
    color: blue;
}



  

  
