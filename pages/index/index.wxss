.horizPlaceholder {
  width: 100%;
  height: 100%;
  /* border: 1rpx solid blue; */
  flex-shrink: 1;
}

.topBar {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0rpx 0rpx;
  /*margin: 5rpx 10rpx;*/
  /* border: 1rpx solid burlywood; */
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  color: #666;
}

.hide {
  display: none;
}

.topBar .item {
  font-size: 30rpx;
  padding: 10rpx 10rpx;
  /* border: 1rpx solid red; */
  flex-shrink: 0;
}

.topBar .item:first-child {
  padding-left: 30rpx;
}

.topBar .item:last-child {
  padding-right: 30rpx;
}

.topBar .separator {
  height: 60%;
  width: 1rpx;
  padding: 1rpx;
  margin: 20rpx;
  /* padding: 0rpx 5rpx; */
  background-color: #e8e8e8;
}

.topBar .searchView {
  width: 100%;
  text-align: left;
}

.cityListView {
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: space-between;
  align-items: stretch;
  /* border-top: 1rpx solid e5e5e5; */
}

.cityListView .item {
  display: flex;
  width: 100%;
  height: 160rpx;
  flex-direction: row;
  align-items: center;
  /* justify-content: space-between; */
  /* padding: 20rpx; */
  border-bottom: 1rpx solid #e5e5e5;
}

 /* .cityListView .item:last-child {
  border-bottom: 0;
}
*/

.cityListView .item .cityName {
  padding-left: 30rpx;
  color: black;
  flex-shrink: 0;
  max-width: 50%;
}

.cityListView .item .timeView {
  height: 100%;
  max-width: 50%;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  align-items: flex-end;
  justify-content: space-between;
  padding: 0px 30rpx;
  /* border: 1rpx solid #e5e5e5; */
}

.timeView .time {
  color : red;
}

.timeView .dayLabel {
  color : lightgrey;
  font-size: 70%;
  padding-top: 10rpx;
}

.timeView .hourLabel {
  color : lightgrey;
  font-size: 70%;
  padding-bottom: 10rpx;
}